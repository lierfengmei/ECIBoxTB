UINT CTestDlg::ReceiveAndProcessData(void *param)		//param传入6个ID，传出9个数据
{
	VCI_CAN_OBJ frameInfo;
	VCI_ERR_INFO errInfo;
	CTestDlg * dlg = (CTestDlg*)param;

	int checkCountMax = 6;		//供检测6个帧的数据。包括1号包1帧，2号包4帧，4号包1帧
	int checkCount = 0;
	int len = 0;

	Sleep(1);
//	if(dlg->m_canConnect == 0)		//如果没有连接，就直接返回
//	return 0;
//	if(dlg->m_can1Open==0)		//如果CAN1口]有打_，就直接返回
//	return 0;

	while(checkCount<checkCountMax)
	{ 
		len = VCI_Receive(DEV_TYPE,DEV_IND,0,&frameInfo,1,200);
		if(len!=1)
			continue;
		if(frameInfo.ID!=dlg->ID[checkCount])			//@e是O置成了全局量。或者可以：
			continue;									//将需要传入的ID[]和需要传出的data[]都通过*param组成struct传入进来
		if(frameInfo.DataLen!=8)
			continue;
		//处理数据
		switch(checkCount)
		{
		case 0: 
			dlg->LEU1Status = frameInfo.Data[1]&0x0f;					//理第1包中的信息
			dlg->LEU2Status = (frameInfo.Data[1]>>4)&0x0f;
			dlg->LEU3Status = frameInfo.Data[2]&0x0f;
			dlg->LEU4Status = (frameInfo.Data[2]>>4)&0x0f;
			break;
		case 1:
			dlg->LEU1Distance = (frameInfo.Data[0]&0x3f)*250;			//第2包frame1中信息
			break;
		case 2:
			dlg->LEU2Distance = (frameInfo.Data[0]&0x3f)*250;			//第2包frame2中信息
			break;
		case 3:
			dlg->LEU3Distance = (frameInfo.Data[0]&0x3f)*250;			//第2包frame3中信息
			break;
		case 4:
			dlg->LEU4Distance = (frameInfo.Data[0]&0x3f)*250;			//第2包frame4中信息
			break;
		case 5:
			dlg->switchNumChange = frameInfo.Data[3]&0x04;				//=1 表示该拨码开关的值已经被改变了  【第4包中信息】
			break;
		default:break;
		}
		checkCount ++;
	}
	dlg->CAN1ThreadEnd = 1;			//线程1结束
	dlg->GetDlgItem(IDOK)->EnableWindow(FALSE);
	dlg->GetDlgItem(IDCANCEL)->EnableWindow(FALSE);
	return 0;
}


